{{define "css"}}
    <link rel="stylesheet" href="/static/css/main.css" /> <!-- Your existing main CSS -->
    <style>
        /* Landing Page Specific Styles */
        body {
            font-family: 'Arial', sans-serif; /* Or your preferred font */
            background-color: #252842; /* Light background */
            color: #333;
            line-height: 1.6;
        }

        .landing-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* Engaging gradient */
            color: white;
            padding: 80px 20px;
            text-align: center;
            border-bottom-left-radius: 150px 20px; /* Subtle curve */
            border-bottom-right-radius: 150px 20px;
            margin-bottom: 40px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .landing-hero h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .landing-hero .chicken-icon {
            font-size: 4rem; /* Make chicken icon prominent */
            display: block;
            margin-bottom: 15px;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
            40% {transform: translateY(-20px);}
            60% {transform: translateY(-10px);}
        }

        .landing-hero p {
            font-size: 1.4rem;
            margin-bottom: 30px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .landing-cta-button {
            background-color: #ffd700; /* Gold accent */
            color: #333;
            padding: 15px 35px;
            text-decoration: none;
            border-radius: 50px; /* Pill shape */
            font-size: 1.2rem;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.15);
            margin: 0 10px;
        }

        .landing-cta-button:hover {
            background-color: #ffc400;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .landing-cta-button.secondary {
            background-color: transparent;
            border: 2px solid #ffd700;
            color: #ffd700; /* Or white if on dark bg */
        }
        .landing-hero .landing-cta-button.secondary {
            color: white;
            border-color: white;
        }
        .landing-hero .landing-cta-button.secondary:hover {
            background-color: rgba(255,255,255,0.1);
        }


        .landing-features {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            padding: 40px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .feature-card {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            padding: 30px;
            margin: 20px;
            width: calc(33.333% - 40px); /* Adjust for responsiveness */
            min-width: 280px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-card .icon {
            font-size: 3rem;
            color: #667eea; /* Theme color */
            margin-bottom: 20px;
        }

        .feature-card h3 {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 10px;
        }

        .feature-card p {
            font-size: 1rem;
            color: #555;
        }

        .landing-footer {
            text-align: center;
            padding: 30px 20px;
            margin-top: 40px;
            background-color: #333;
            color: #252842;
        }
        .landing-footer p {
            margin: 0;
        }

        /* Responsive adjustments */
        @media (max-width: 992px) {
            .feature-card {
                width: calc(50% - 40px);
            }
        }
        @media (max-width: 768px) {
            .landing-hero h1 {
                font-size: 2.8rem;
            }
            .landing-hero p {
                font-size: 1.2rem;
            }
            .landing-cta-button {
                padding: 12px 25px;
                font-size: 1rem;
                display: block;
                margin: 10px auto;
                width: fit-content;
            }
            .feature-card {
                width: calc(100% - 40px);
            }
        }

    </style>
{{end}}

